<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/forest_sunny" />





    <LinearLayout
        android:id="@+id/lin_header_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#47AB2F"
        android:paddingTop="3dp"
        android:layout_below="@+id/img_forecast"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ttv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/ttv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="0"/>
        <TextView
            android:id="@+id/ttv_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_header_headings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#47AB2F"
        android:paddingTop="2dp"

        android:paddingBottom="5dp"
        android:layout_below="@+id/lin_header_temperature"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="min"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="current"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="max"/>

    </LinearLayout>
    <View
        android:id="@+id/shadow"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@drawable/drop_shadow"
        android:layout_below="@+id/lin_header_headings"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/shadow"
        android:background="#47AB2F">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/ttv_day1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="Monday"/>
            <TextView
                android:id="@+id/ttv_day2"
                android:layout_width="wrap_content"

                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="Tuesday"/>
            <TextView
                android:id="@+id/ttv_day3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="Wednesday"/>
            <TextView
                android:id="@+id/ttv_day4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="Thursday"/>
            <TextView
                android:id="@+id/ttv_day5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:text="Friday"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ttv_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="8dp"
                android:src="@drawable/clear"/>
            <ImageView
                android:id="@+id/ttv_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="8dp"
                android:src="@drawable/clear"/>

            <ImageView
                android:id="@+id/ttv_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="center"
                android:src="@drawable/clear"/>
            <ImageView
                android:id="@+id/ttv_icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="center"
                android:src="@drawable/clear"/>
            <ImageView
                android:id="@+id/ttv_icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:src="@drawable/clear"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/ttv_temp1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="16dp"
                android:paddingBottom="3dp"
                android:text="0"/>
            <TextView
                android:id="@+id/ttv_temp2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="16dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                android:text="0"/>
            <TextView
                android:id="@+id/ttv_temp3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="16dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                android:text="0"/>
            <TextView
                android:id="@+id/ttv_temp4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="16dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                android:text="0"/>
            <TextView
                android:id="@+id/ttv_temp5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="16dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="0"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>